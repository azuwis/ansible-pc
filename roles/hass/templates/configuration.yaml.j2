homeassistant:
  name: Home
  latitude: {{ hass.latitude }}
  longitude: {{ hass.longitude }}
  time_zone: Asia/Shanghai
  unit_system: metric

automation:

config:

conversation:

discovery:

frontend:

group:

history:

http:
  server_host: 127.0.0.1

logbook:

map:

media_player:
  - platform: braviatv
    host: {{ hass.braviatv_host }}

notify:
  - name: html5
    platform: html5
    gcm_api_key: '{{ hass.gcm_api_key }}'
    gcm_sender_id: '{{ hass.gcm_sender_id }}'

script:
  water_heater:
    alias: Water Heater
    sequence:
      - alias: Turn on Water Heater Power
        service: switch.broadlink_send_packet_{{ hass.broadlink_host | regex_replace('\.', '_') }}
        data:
          packet: 'JgBkAAABJ5USExI3ERQROBE4EhMRFBITETgRFBETEhMRFBE4ERQROBITEhMROBE4EjgSEhI4EjcRORE4ERQROBEUERMSExEUETgRFBE4EhMROBI4ETgSNxITETgSAARoAAEnlRIADQUAAAAA'
      - alias: Turn on Water Heater Heating
        service: switch.broadlink_send_packet_{{ hass.broadlink_host | regex_replace('\.', '_') }}
        data:
          packet: 'JgBkAAABJ5YRExI4ERQROBE4ERQRFBETEjgRExEUEhMSExE4EhMROBEUERMRORI3EjcTEhE4EjgROBE5ETgRFBE4EhMTERITEjcSExEUETgRFRA4EzcROBITETgSAARoAAEolBIADQUAAAAA'

sensor:
  - platform: yr
    monitored_conditions:
      - temperature
      - symbol
      - humidity

sun:

switch:
  - platform: broadlink
    host: {{ hass.broadlink_host }}
    mac: '{{ hass.broadlink_mac }}'

tts:
  - platform: google

updater:
  reporting: False

zone:
{{ hass.zone | to_nice_yaml | indent(2, true) }}
