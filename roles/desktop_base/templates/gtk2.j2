# {{ ansible_managed }}
gtk-theme-name="{{ theme.gtk2 }}"
gtk-icon-theme-name="{{ theme.icon }}"
gtk-key-theme-name="Emacs"

# GVim maximized gap workaround, http://superuser.com/a/351324
style "vimfix" {
    bg[NORMAL] = "#3f3f3f" # this matches gvim theme 'Normal' bg color.
}
widget "vim-main-window.*GtkForm" style "vimfix"
