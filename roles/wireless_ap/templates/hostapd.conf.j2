interface={{ wireless_ap.interface }}
driver=nl80211

logger_syslog=-1
logger_syslog_level=2
logger_stdout=-1
logger_stdout_level=2

ctrl_interface=/var/run/hostapd

ssid={{ wireless_ap.ssid }}
hw_mode={{ wireless_ap.hw_mode }}
channel={{ wireless_ap.channel }}
wpa=2
wpa_passphrase={{ wireless_ap.wpa_passphrase }}
wpa_key_mgmt=WPA-PSK
wpa_pairwise=CCMP
rsn_pairwise=CCMP
auth_algs=1
macaddr_acl=0
